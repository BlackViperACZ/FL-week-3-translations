translate malay d20s03_9f30caeb:

    # kb "And I want you to be honest."
    kb "Dan aku nak kau berterus terang."

# game/code/d20/d20s03.rpy:113
translate malay d20s03_06c0ca6e:

    # mc "I'll try."
    mc "Aku akan cuba."
    
# game/code/d20/d20s03.rpy:114
translate malay d20s03_40081f0d:

