translate korean e06s01_6e0cbc41:

    # mc "Nothing?"
    mc "없을걸?"

# game/code/e06/e06s01.rpy:102
translate korean e06s01_9afdaa4c:

    # lc "Come on. You can tell me."
    lc "말해 봐. 나한텐 말해도 된다구."

